<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="120dp"
              android:layout_height="200dp" android:orientation="vertical"
              android:padding="10dp">
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" app:srcCompat="@drawable/the_delta_force"
            android:id="@+id/serie_Image_Picture" android:background="@color/blackcarbon"
            android:contentDescription="@string/movie" android:layout_weight="2"/>

    <Button
        android:id="@+id/serie_Title"
        style="@style/text.verytiny.dark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#D0F8FD"
        android:clickable="true"
        android:text="serie title"
        app:backgroundTint="#D0F8FD" />
</LinearLayout>